{
  "name": "RecordatoriosAMC",
  "description": "Recordatorios tareas pendientes",
  "version": "1.0",
  "manifest_version": 2,
//  "permissions": ["background","alarms", "notifications", "storage"],  TODO INVESTIGAR "activeTab" , "GCM"
  "permissions": ["background","alarms", "notifications", "storage","activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Recordatorios tareas pendientes",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo_amc16.png",
    "32": "logo_amc32.png",
    "48": "logo_amc48.png",
    "128": "logo_amc128.png"
  }
}
